{
  "compilerOptions": {
    "target": "es2015",
    "module": "commonjs",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "declaration": true,
    "emitDeclarationOnly": false,
    "strict": true,
    "outDir": "lib",
    "declarationDir": "types",
    "typeRoots": ["./node_modules/@types", "../node_modules/@types"]
  },
  "include": ["src"]
}
